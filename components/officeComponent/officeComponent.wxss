page{
    background: #fff;
  }
  .office_top{
    background:linear-gradient(180deg,rgba(77,185,238,1),rgba(54,142,254,1));
    padding: 60rpx 0;
  }
  .office_filter{
    text-align: center;
    width: 90%;
    height: 76rpx;
    line-height: 76rpx;
    border-radius:4rpx; 
    margin: 0 auto;
    background: #fff;
    color:#333;
  }
  .office_filter:nth-of-type(2){
    margin: 30rpx auto 0;
  }
  .office_item{
    padding:40rpx 0; 
    border-bottom: 1px dashed #e2e2e2;
  }
  .office_img{
   padding: 0 35rpx;
  }
  .office_img image{
    width: 100%;
    height: 340rpx;
    border-radius:10rpx; 
  }
  .office_title{
    margin-bottom: 5rpx;
    
  }
  .curr_item{
    justify-content:space-between;
    padding: 0 35rpx;
  }
  .office_icon image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 14rpx;
  }