page{
  background: #f3f3f3;
}
.page-section {
  border-radius: 16px;
  padding: 20rpx 20rpx 0;
}
.swiper-item image{
  width: 100%;
  height: auto;
  display: block;
  border-radius: 16px;
}
.swiper_container{
  height: 46rpx;
  line-height: 46rpx;
}
.notice{
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 20rpx 0;
  margin-top: 15rpx;
  border-bottom: 1px solid #efefef;
}
.notice_right{
  width: 80%;
}
.notice_left{
  width: 8%
}
.notice_left image{
  width: 46rpx;
  height: 46rpx
}
.barList{
  padding: 30rpx 0 0;
  display: flex;
  flex-wrap: wrap;
}
.barList_item{
  width: 33.3%;
  padding-bottom:25rpx; 
  text-align: center;
  color: #333;
}
.barList_item image{
  width: 80rpx;
  height: 80rpx;
}
.notice, .barList{
  background: #fff;
}
.inform{
  margin-top:20rpx;
  background: #fff; 
  padding: 20rpx 20rpx;
}
.inform_box{
  display: flex; 
  flex-wrap: nowrap;
}
.inform_item{
  border-radius: 10px;
  margin-right: 20px;
  /* width: 50%; */
}
.inform_item image{
  border-radius: 10px;
  width: 330rpx;
  height: 200rpx
}
.inform_item .text_title{
  font-size: 12px;
  text-align: center;
  overflow: hidden;
}
.poster{
  background: #fff;
  margin-top:15rpx;
  padding-bottom:40px; 
}
.poster_item{
  position: relative;
  width: 90%;
  margin: 0 auto 20rpx;
}
.poster_item .poster_text{
  position: absolute;
  bottom: 0;
  left:0;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  color: #fff;
  /* text-indent: 1em; */
  text-align: center;
  background: rgba(0, 0, 0, 0.5)
}
.poster_head{
  padding: 20rpx 0rpx;
  width: 90%;
  margin: 0 auto;
  font-weight: 600;
}
.poster_item image{
  width: 100%;
  height: 300rpx;
}
.inform_head{
  width:auto;
}