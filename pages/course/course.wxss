.coruse{
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom:1px dashed rgb(207, 207, 207);
}
.coruse_box{
  background: #fff;
}
.coruse_left{
  width: 30%;
  position: relative;
}
.coruse_left text{
  position: absolute;
  padding: 10rpx;
  font-size: 14px;
  top: 0;
  left: 0;
  color: #fff;
  background:rgba(0, 0, 0, 0.51);
}
.coruse_left image{
  width: 100%;
  height: 230rpx
}
.coruse_right{
  width: 70%;
  padding-left: 20rpx;
}
.coruse_key, .address{
  padding: 10rpx 0 10rpx;
  color: #666;
  font-size: 14px;
}
.coruse_content{
  /* height: 84rpx; */
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  color: #666;
}
.coruse_time{
  /* font-size: 12px; */
}
.curr_item{
  padding: 0;
}
.curr_item view{
  /* height: 40rpx; */
  width: 50%;
}
.cancel_btn view:nth-of-type(2){
  border:1px solid #e7e7e7;
  width: 36%;
  line-height: 50rpx;
  border-radius: 4px;
  text-align: center;
  color: #368efeFF;
}