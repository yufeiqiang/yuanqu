.searchbar_bottom image{
  width: 100%;
  display: block;
  height: 180rpx;
}
.forum_title{
  border-bottom: 1px solid rgb(228, 228, 228); 
}
.forum_title_list{
  width: 33.3%;
  text-align: center;
  height: 100%;
}
.curr_title{
  color: #368efeFF;
  /* border-bottom: 1px solid #368efeFF;  */
}
.forum_content{
  border-bottom:1px solid #efefef; 
}
.forum_content_l{
  width: 66rpx;
  height: 66rpx
}
.forum_content_l image{
  width: 100%;
  height: 100%;
  border-radius: 4px; 
}
.forum_nickname{
  width: 100%;
  padding-top:0; 
  padding-bottom:0; 
  align-items: center;
  justify-content:space-between;
}
.nickname_text{
  color: rgb(41, 111, 202);
  font-size: 16px;
}
.forum_img_box{
  flex-wrap:wrap;
  padding: 0 20rpx;
}
.forum_img{
  margin: 0 10rpx 10rpx 0;
}
.forum_img image{
  width: 180rpx;
  display: block;
  height: 180rpx;
}
.forum_nickname button{
  height: 60rpx;
  font-size: 14px;
  line-height: 60rpx;
}
.forum_content_r{
  width: 610rpx;
}
.forum_content_text{
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  font-size: 14px;
}
.comment_list {
  align-items: center;
  padding: 0 20rpx;
  justify-content:space-between;
}
.comment_list image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 5rpx;
  vertical-align:text-bottom;
}
.commen_f image{
  /* width: 37rpx; */
  /* height: 37rpx; */
  margin-right: 5rpx;
}
.delete{
   color: rgb(41, 111, 202);
}
.comment_list_a{
  width: 320rpx;
  font-size: 12px;
  color: #666;
}
.commen_f, .commen_c{
  color: #666;
  font-size: 14px;
}
.searchbar_flex{
  display: flex;
  align-items: center;
  background: #fff;
}
.searchbar_l{
  width: 90%;
}
.searchbar_r{
  width: 10%;
  background: #fff;
}
.searchbar_r image{
  width: 30rpx;
  height: 30rpx;
}
.null_item{
  height: 360rpx;
}
.bar{
  position: fixed;
  width: 100%;
  padding: 10rpx 0;
  left: 0;
  bottom: 0;
  border-top: 1px solid rgb(214, 214, 214);
  background: #fff;
}
.bar .curr_item{
  text-align: center;
  padding: 0;
}
.bar .curr_item .bar_item{
  width: 33.3%;
  font-size: 14px;
}
.bar .curr_item .bar_item text{
  color: #666;
}
.bar .curr_item image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
  display: block;
}