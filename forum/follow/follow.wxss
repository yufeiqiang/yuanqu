page{
  background: #fff;
}
.follow_title{
  border-top:1px solid #ededed; 
  padding: 0;
}
.follow_title view{
  width: 50%;
  padding: 20rpx 0;
  text-align: center;
  border-bottom:1px solid #ededed; 
}
.follow_title view.curr_follow{
  border-bottom: 1px solid #368efeFF;
  color: #368efeFF;
}
.follow_title view:nth-of-type(1){
  border-right: 1px solid #ededed;
}
.isFollow button{
  background: none;
  font-size: 12px;
  color: #368efeFF;
  height: 50rpx;
  line-height: 50rpx;
  width: 60%;
  border: 1px solid #368efeFF;
}
.follow_item{
  align-items: center;
  border-bottom: 1px solid #ededed;
}
.follow_left{
  width: 70%;
}
.folow_right{
  width: 30%;
}
.follow_left image{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 8rpx;
  vertical-align: middle;
  justify-content: space-between;
}
.follow_left text{
  margin-left: 10rxp;
}