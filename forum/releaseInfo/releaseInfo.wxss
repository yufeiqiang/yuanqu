
page{
  background: #fff;
}
.img-box{
    width: 100%;
    height: 100%;
    padding: 20rpx 42rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap
 
}
.img{
    width: 120px;
    height: 120px;
   
    position: relative;
}
.img image{
    width: 100%;
    height: 100%;
}
.delete-btn{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30px;
    font-size: 12px;
    color: #fff;
    background: rgba(0,0,0,.5);
    text-align: center;
    line-height: 30px;
}
.upload-img-btn{
    width: 120px;
    height: 120px;
    text-align: center;
    line-height: 100px;
    border: 1px solid #ccc;
}
.release_title{
  justify-content:space-between; 
  align-items: center;
}
.text_box{
  padding: 0 40rpx;
}
.text_box textarea{
  width: 100%;
}
.release_btn button{
  height: 55rpx;
  line-height: 55rpx;
  border:none;
  color: #fff;
  background: #179b16;
}
.release_btn button::after{
  border:none;
}