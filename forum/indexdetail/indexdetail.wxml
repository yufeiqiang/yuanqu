<view>
  <wxs src="../../utils/comm_filter.wxs" module='commFilter' />
  <view class="forum_title_bg">
    <view class="forum_content curr_item">
      <view class="forum_content_l">
        <image src="{{baseUrl}}{{list.headImg}}"></image>  
      </view>
      <view class="forum_content_r">
        <view class="forum_nickname curr_item">
          <view class="nickname_text">{{list.nikeName}}</view>
          <view wx:if="{{userId != list.memberId}}">
            <button bindtap="follow" data-id="{{list.memberId}}">{{list.isFollow==0 ? '关注':'取消关注'}}</button>
          </view>
        </view>
        <view class="forum_content_text">{{list.content}}</view>
        <view class="forum_img_box curr_item" >
          <view class="forum_img" wx:for="{{commFilter.imgSplit(list.pics)}}" wx:key="item">
            <image src="{{baseUrl}}{{item}}" wx:if="{{item}}" mode="aspectFill"></image>
          </view>
        </view>
        <view class="comment_list curr_item">
          <view class="comment_list_a">1小时前</view>
          <view class="delete">删除</view>
          <view class="commen_f" bindtap="fabulous" data-id="{{item.id}}" data-index="{{index}}" data-type="2">
            <image src="../../image/forum/fabulous.png"></image>{{list.praiseCount}}</view>
          <view class="commen_c"><image src="../../image/forum/comment.png"></image>{{list.commentCount}}</view>
        </view>
        <view class="zan_list curr_item">
          <view class="zan_list_a"><image src="../../image/forum/xin.png"></image></view>
          <view class="zan_list_b" wx:for="{{commFilter.imgSplit(list.headImg)}}" wx:key="item" >
            <image src="" src="{{baseUrl}}{{list.headImg}}"></image>
          </view>
        </view>
      </view>
    </view>
    <view class="comment_box">
      <view class="comment_item" wx:for="{{commentList}}" data-id="{{item.id}}" data-releaseName="{{item.nikeName}}" bindtap="bindReply" wx:key="item.id">
          {{item.nikeName}}<text wx:if="{{item.parentNikeName}}">回复</text>{{item.parentNikeName}}：<text>{{item.comment}}</text>
      </view>
    </view>
    <view class="release" hidden="{{!releaseFocus}}">
      <textarea class="text"
            placeholder-class="input_null" 
            fixed="true" 
            maxlength="-1" 
            show-confirm-bar=""
            cursor-spacing="28" 
            auto-height="true" 
            value ="{{commentConten.comment}}"
            bindinput="formInputChange"
            focus="{{releaseFocus}}"
            placeholder="回复 {{releaseName}}"></textarea>
      <view class="submit"   bindtap="commentSub">发送</view>
    </view>
  </view>
  <mp-loading type="circle" tips="加载中" show="{{isloading}}"></mp-loading>
    <view class='more' wx:if="{{ismore}}">无数据（-_-）</view>
</view>